<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_tasks">

    <fragment
        android:id="@+id/nav_tasks"
        android:name="com.esa.evsync.app.pages.TaskListFragment"
        android:label="Tasks" />
    <fragment
        android:id="@+id/nav_events"
        android:name="com.esa.evsync.app.pages.EventList.EventCardFragment"
        android:label="Events" >
        <action
            android:id="@+id/action_eventsFragment_to_eventAddFragment"
            app:destination="@id/nav_eventAddFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.esa.evsync.app.pages.SettingsFragment"
        android:label="Settings" />
    <fragment
        android:id="@+id/nav_eventAddFragment"
        android:name="com.esa.evsync.app.pages.EventAddFragment"
        android:label="Add Event" />
</navigation>
